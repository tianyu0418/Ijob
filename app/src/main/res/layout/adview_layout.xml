<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#555555"
    android:orientation="horizontal"
    >

    <jp.softbank.mb.fa.libraries.BannerView.ViewFlow
        android:id="@+id/helpbannerImage"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:id="@+id/indicatorparent"
        android:background="#00000000"
        android:gravity="center"
        android:padding="3dip" >

        <jp.softbank.mb.fa.libraries.BannerView.CircleFlowIndicator
            android:id="@+id/viewflowindic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:padding="2dip"
            android:visibility="invisible"
            app:activeColor="#ff0000"
            app:activeType="fill"
            app:circleSeparation="36dip"
            app:inactiveColor="#ffffff"
            app:inactiveType="fill"
            app:radius="3dip" />
    </FrameLayout>


</RelativeLayout>