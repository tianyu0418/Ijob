<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/offer_info_item_round_corner">
<!--            android:background="#dde1f5fe"
-->
        <TextView
            android:id="@+id/u4_info_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#dd000000"
            android:textSize="17dp"
            android:background="@drawable/offer_info_item_title_round_corner"
            android:textStyle="bold"
            android:padding="3dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/u4_info_item_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/u4_info_item_title"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="5dp"
            android:textColor="#dd000000"
            android:textSize="15dp" />

    </RelativeLayout>
</RelativeLayout>